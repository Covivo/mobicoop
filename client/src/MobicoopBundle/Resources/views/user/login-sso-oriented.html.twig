{% extends '@Mobicoop/base.html.twig' %}

{% block title %}
{% trans from 'ui' %}user.login.title{% endtrans %} - {{ app_name }}
{% endblock %}
{% block stylesheets %}
{#{{ encore_entry_link_tags("#{assets_prefix ?? ''}user/login") }}#}
{% endblock %}

{% block main %}
<login-sso-oriented :errormessage="{{ {'value': errorMessage}|json_encode(1) }}"
    :show-facebook-login="{{ facebook_show ? "true" : "false" }}" facebook-login-app-id="{{ facebook_appid }}"
    :id="{{ id is defined ? (id ? id : 'null') : 'null' }}" type="{{ type }}"
    :sign-up-link-in-connection="{{ signUpLinkInConnection ? "true" : "false" }}"
    service="{{ service is defined ? service : 'null' }}" app-name="{{ app_name }}"
    :sso-button-display="{{ ssoButtonDisplay ? "true" : "false" }}"
    :specific-sso-services="{{ specificSsoServices|json_encode }}"
    :inbuilt-login-form-display="{{ signInSsoOrientedWithInbuiltForm ? "true" : "false" }}"/>

{% endblock %}
