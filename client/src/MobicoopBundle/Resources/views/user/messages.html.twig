{% extends '@Mobicoop/base.html.twig' %}

{% block title %}{% trans from 'ui' %}user.messages.title{% endtrans %}{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('bundle_user/messages') }}
{% endblock %}

{% block body %}

<section class="hero is-primary">
	<div class="hero-body">
    	<div class="container">
      		<h1 class="title">
				{% trans from 'ui' %}user.messages.h1{% endtrans %}
      		</h1>
    	</div>
  	</div>
</section>

<section class="section">
	<div class="container">
	    {% if threadsDirectMessagesForView %}
		<div id="messages">
    		<Messages 
				:threadsdirectmessagesforview="{{ threadsDirectMessagesForView|json_encode }}"
				userid="{{ userId }}"
				idmessagedefault="{{ idMessageDefault }}"
				idrecipientdefault="{{ idRecipientDefault }}"
			></Messages>
		</div>
    	{% else %}
      		<span class="tag is-danger">User not found.</span>
      	{% endif %}
    </div>
</section>

{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('bundle_user/messages') }}
{% endblock %}