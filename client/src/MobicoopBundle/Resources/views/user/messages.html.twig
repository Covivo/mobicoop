{% extends '@Mobicoop/base.html.twig' %}

{% block title %}
  {% trans from 'ui' %}user.messages.title{% endtrans %}
{% endblock %}
{% block stylesheets %}
  {{ encore_entry_link_tags("#{assets_prefix ?? ''}user/messages") }}
{% endblock %}

{% block main %}
    {% if idRecipientDirect %}
      <Messages 
        :id-user="{{ idUser }}"
        :new-id-recipient-direct="{{ idRecipientDirect }}"
      />
    {% else %}
      <Messages 
        :id-user="{{ idUser }}"
        :new-id-recipient-carpool="{{ idRecipientCarpool }}"
      />
    {% endif %}
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags("#{assets_prefix ?? ''}user/messages") }}
{% endblock %}
