{% extends '@Mobicoop/base.html.twig' %}

{% block title %}
  {% trans from 'ui' %}user.signup.title{% endtrans %}
{% endblock %}
{% block stylesheets %}
  {{ encore_entry_link_tags("#{assets_prefix ?? ''}user/signup") }}
{% endblock %}
{% block main %}
    <section class="hero is-passur">
        <div class="hero-body">
            <div class="container">
                <h1 class="title text-center font-weight-bold mt-7">
                    {% trans from 'ui' %}user.signup.h1{% endtrans %}
                </h1>
            </div>
        </div>
    </section>

    <section class="section">
        {% if error %}
            <span class="tag is-danger">An error occured.</span>
        {% endif %}
        <div class="container" id='signup'>

            <Signupform
                    age-min="{{ ageMin }}"
                    age-max="{{ ageMax }}"
                    geo-search-url="{{ geoCompleteUri }}"
                    sent-token="{{ csrf_token('user-signup') }}"
            ></Signupform>
        </div>
    </section>

{% endblock %}
{% block javascripts %}
  {{ encore_entry_script_tags("#{assets_prefix ?? ''}user/signup") }}
{% endblock %}
