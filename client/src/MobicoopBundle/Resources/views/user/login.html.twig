{% extends '@Mobicoop/base.html.twig' %}

{% block title %}
  {% trans from 'ui' %}user.login.title{% endtrans %}
{% endblock %}
{% block stylesheets %}
  {# ☣️ String interpolation only works with double quotted, see https://twig.symfony.com/doc/2.x/templates.html#string-interpolation #}
  {# assets_prefix if an env variable, not defined in client but defined in the main mobicoop_platform #}
{{ encore_entry_link_tags("#{assets_prefix ?? ''}user/login") }}
{% endblock %}
  {% block main %}

    <section class="hero connexion is-passur"> <div class="hero-body">
      <div class="container">
        <h1 class="title has-text-centered">
          Connexion
        </h1>
      </div>
    </div>
  </section>

  <section class="section loginForm">
    {% if error %}
      <div class="columns">
        <div class="column has-text-centered">
          <p class="error">La connexion a échoué</p>
        </div>
      </div>
    {% endif %}
    {{ form_start(form) }}
    <div class="columns is-centered email">
      {{ form_row(form.username)}}
    </div>
    <div class="columns is-centered ou">
      <p>
        ou
      </p>
    </div>
    <div
      class="columns is-centered phone">
      {# fake form_row(phone) because she don't exist yet and it's why she's disabled... #}
      <div class="field is-horizontal">
        <div class="field-label">
          <label class="label">Téléphone</label>
        </div>
        <div class="field-body">
          <div>
            <input class="input" disabled placeholder="téléphone portable"/>
          </div>
        </div>
      </div>
    </div>
    <div class="columns is-centered password">
      {{form_row(form.password)}}
    </div>
    <div class="columns is-centered login">
      {{form_row(form.login)}}
    </div>
    {{ form_errors(form) }}
    {{ form_end(form) }}

  </section>

{% endblock %}
{% block javascripts %}
  {{ encore_entry_script_tags("#{assets_prefix ?? ''}user/login") }}
{% endblock %}
