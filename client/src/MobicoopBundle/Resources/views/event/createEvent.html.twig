{% extends '@Mobicoop/base.html.twig' %}
{# @var form \Symfony\Component\Form\FormView #}
{% block title %}{% trans from 'ui' %}events.create.title{% endtrans %} - {{ app_name }}{% endblock %}

{% block stylesheets %}
    {#{{ encore_entry_link_tags("#{assets_prefix ?? ''}community/createCommunity") }}#}
{% endblock %}

{% block main %}


    <event-create
     :user="{{ app.user|json_encode }}"
     :image-min-px-size="{{ imageMinPxSize }}"
     :image-max-mb-size="{{ imageMaxMbSize }}"
     :mandatory-description = "{{ mandatoryDescription  ? "true" : "false" }}"
     :mandatory-full-description = "{{ mandatoryFullDescription  ? "true" : "false" }}"
     :mandatory-image = "{{ mandatoryImage  ? "true" : "false" }}"
     :can-select-community = "{{ canSelectCommunity  ? "true" : "false" }}"
     :mandatory-community = "{{ mandatoryCommunity  ? "true" : "false" }}"

     geo-search-url="{{ geoCompleteUri }}"
     :geo-complete-results-order="{{geoCompleteResultsOrder|json_encode}}"
     :geo-complete-palette="{{geoCompletePalette|json_encode}}"
     {{ geoCompleteChip ? 'geo-complete-chip' : '' }}
    />

{% endblock %}
