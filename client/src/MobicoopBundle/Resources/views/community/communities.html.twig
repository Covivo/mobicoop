{% extends '@Mobicoop/base.html.twig' %}

{% block title %}{% trans from 'ui' %}communities.communities.title{% endtrans %} - {{ app_name }}{% endblock %}
{% block stylesheets %}
    {#{{ encore_entry_link_tags("#{assets_prefix ?? ''}community/communities") }}#}

{% endblock %}
{% block main %}
    <div class="layout justify-center"
         outlined
         tile>
        <div class="flex xs10">
            <community-help></community-help>
            <br/><br/>
            <community-list
                    :paths="{{ {'community_create':path('community_create'), 'community_ad_post':path('carpool_ad_post')}|json_encode }}"
                    :items-per-page-default="{{ defaultItemsPerPage }}"
                    :is-logged="{{ (app.user ? true : false)|json_encode }}"
            ></community-list>
            <br/><br/>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {#{{ encore_entry_script_tags("#{assets_prefix ?? ''}community/communities") }}#}
{% endblock %}