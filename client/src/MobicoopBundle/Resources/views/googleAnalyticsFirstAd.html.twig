    let cookiesPrefsGAFAd = JSON.parse(localStorage.getItem('cookies_prefs'));
    let sendStatsGAFAd = (cookiesPrefsGAFAd && cookiesPrefsGAFAd.stats)
    if(sendStatsGAFAd){    
        gtag('event', 'conversion', {
            'allow_custom_scripts': true,
            'send_to': '{{ googleAnalyticsId }}{{ googleAnalyticsFirstAd }}'
        });
    }
</script>
