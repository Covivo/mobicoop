        {# we format origin and destination address #}
        origin = "{{ origin | replace({'_': " "}) }}"
        destination = "{{ destination | replace({'_': " "}) }}"
        origin-latitude = "{{ origin_latitude }}"
        origin-longitude = "{{ origin_longitude }}"
        destination-latitude = "{{ destination_latitude }}"
        destination-longitude = "{{ destination_longitude }}"
        {# We format date here so it does not have to be done in Vue #}
        date = "{{date}}"
        matching-search-url = "{{ matching_search_url }}"
        :user="{{app.user|json_encode}}"
    />


