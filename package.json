{
  "name": "mobicoop",
  "version": "1.0.0",
  "description": "API, Front & admin mobicoop carpool app",
  "main": "package.json",
  "scripts": {
    "preinstall": "node helpers/hooks/download-bundle.js",
    "install": "npm run install-api && npm run install-admin && npm run install-mobicoop",
    "install-api": "cd api && npm i",
    "install-admin": "cd interfaces/admin && npm i",
    "install-mobicoop": "cd interfaces/mobicoop && npm i",
    "postinstall": "wget http://www.phpdoc.org/phpDocumentor.phar -P bin && wget https://cs.sensiolabs.org/download/php-cs-fixer-v2.phar -O bin/php-cs-fixer.phar",
    "test": "npm run test-api && npm run test-mobicoop",
    "test-api": "cd api && npm run test",
    "test-admin": "cd interfaces/admin && npm run test",
    "test-mobicoop": "cd interfaces/mobicoop && npm run test",
    "start": "npm-run-all --parallel compileAndWatch start-api start-admin start-mobicoop",
    "start-api": "cd api && npm start",
    "start-admin": "cd interfaces/admin && npm start",
    "start-mobicoop": "cd interfaces/mobicoop && npm start",
    "compileAndWatch": "cd interfaces/mobicoop && npm run compileAndWatch"
  },
  "config": {
    "ghooks": {
      "pre-commit": "node helpers/hooks/check-git-integrity.js && php bin/php-cs-fixer.phar fix --using-cache=false api/src &&  php bin/php-cs-fixer.phar fix --using-cache=false interfaces/mobicoop/src && php bin/php-cs-fixer.phar fix --using-cache=false interfaces/mobicoop/src/MobicoopBundle/spec",
      "commit-msg": "node helpers/hooks/commit-hooks.js $2",
      "post-checkout": "node helpers/hooks/check-git-integrity.js || helpers/hooks/node checkout-branch.js",
      "pre-push": "node helpers/hooks/check-git-integrity.js && npm test && helpers/hooks/push.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/mobicoop/mobicoop.git"
  },
  "author": "MatthD",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://gitlab.com/mobicoop/mobicoop/issues"
  },
  "homepage": "https://gitlab.com/mobicoop/mobicoop#README",
  "dependencies": {
    "commander": "^2.19.0",
    "git-command-line": "^0.1.5",
    "git-repo-info": "^2.0.0",
    "kuler": "^1.0.1",
    "npm-run-all": "^4.1.3",
    "simple-git": "^1.105.0"
  },
  "devDependencies": {
    "ghooks": "^2.0.4"
  }
}
