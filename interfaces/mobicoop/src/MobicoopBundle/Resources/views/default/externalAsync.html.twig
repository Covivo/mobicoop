{% extends '@Mobicoop/base.html.twig' %}

{% block title %}HI{% endblock %}

{% block body %}
    <p class="title is-1 is-spaced is-centered">List of externals journeys</p>
    {% if externaljourney %}
        <div class="columns is-multiline">
            {% for api in externaljourney['hydra:member'] %}
                {% if api.state == "fulfilled" %}
                    {% if api.value == null %}
                        <div class="notification is-warning">
                            <button class="delete"></button>
                            <strong> No route found for this api</strong>
                        </div>
                    {% endif %}
                    {% for journey in api.value %}

                        <div class="column is-one-quarter">
                            <div class="box">
                                <article class="media">
                                    <div class="media-left">
                                        <figure class="image is-64x64">
                                            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                                        </figure>
                                    </div>
                                    <div class="media-content">
                                        <div class="content">
                                            <strong>{{ journey.journeys.driver.alias }}</strong> <small>{{journey.journeys.driver.gender}}</small>
                                            <span class="tag">{{ journey.journeys.outward.mindate }} - {{ journey.journeys.outward.maxdate }}</span>
                                            <div class="columns">
                                                <div class="column is-2">
                                                    <div style="line-height: 1.8;">
                                                        <span class="tag is-primary is-rounded">From</span>
                                                        <br>
                                                        <span class="tag is-primary is-rounded">To</span>
                                                        <br>
                                                        <span class="tag is-info is-rounded">Info</span>
                                                        <br>
                                                        <span class="icon has-text-info" style="margin-left: 7px">
                                                    <i class="fas fa-info-circle"></i>
                                                </span>
                                                    </div>
                                                </div>
                                                <div class="column">
                                                    <div style="line-height: 1.8">
                                                        {{ journey.journeys.from.city }}
                                                        <br>
                                                        {{ journey.journeys.to.city }}
                                                        <br>
                                                        {{ journey.journeys.details }}
                                                        <br>
                                                        <span class="tag" alt="{{ journey.journeys.origin }}">
                                                            <a href="http://{{ journey.journeys.origin }}">{{ journey.journeys.origin }}</a>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="notification is-warning">
                        <button class="delete"></button>
                        <strong>API STATE NOT FULFILLED</strong>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% else %}
        <span class="tag is-warning">No external journey found.</span>
    {% endif %}

{% endblock %}
