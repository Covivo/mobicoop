{% extends '@Mobicoop/base.html.twig' %}

{% block title %}HI{% endblock %}

{% block body %}
    <p class="title is-1 is-spaced is-centered">List of externals journeys</p>
    {% if externaljourney %}
        <div class="columns is-multiline">
            {% for journeys in externaljourney['hydra:member'] %}
                <div class="column is-one-quarter">
                    <div class="box" style="box-shadow: 0 14px 20px rgba(10, 10, 10, 0.1);">
                        <article class="media">
                            <div class="media-left">
                                <figure class="image is-64x64">
                                    <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                                </figure>
                            </div>
                            <div class="media-content">
                                <div class="content">
                                    <strong>{{ journeys.journeys.driver.alias }}</strong> <small>{{journeys.journeys.driver.gender}}</small>
                                    <span class="tag">{{ journeys.journeys.outward.mindate }} - {{ journeys.journeys.outward.maxdate }}</span>
                                    <div class="columns">
                                        <div class="column is-2">
                                            <div style="line-height: 1.8;">
                                                <span class="tag is-primary is-rounded">From</span>
                                                <br>
                                                <span class="tag is-primary is-rounded">To</span>
                                                <br>
                                                <span class="tag is-info is-rounded">Info</span>
                                                <br>
                                                <span class="icon has-text-info" style="margin-left: 7px">
                                                    <i class="fas fa-info-circle"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="column">
                                            <div style="line-height: 1.8">
                                                {{ journeys.journeys.from.city }}
                                                <br>
                                                {{ journeys.journeys.to.city }}
                                                <br>
                                                {{ journeys.journeys.details }}
                                                <br>
                                                <a href="http://{{ journeys.journeys.origin }}">{{ journeys.journeys.origin }}</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <span class="tag is-warning">No external journey found.</span>
        <p >




        </p>
    {% endif %}

{% endblock %}
