{% extends '@Mobicoop/base.html.twig' %}

{% block title %}{% trans from 'ui' %}user.profile.title{% endtrans %}{% endblock %}

{% block body %}

<section class="hero is-primary">
	<div class="hero-body">
    	<div class="container">
      		<h1 class="title">
				{% trans from 'ui' %}user.profile.h1{% endtrans %}
      		</h1>
    	</div>
  	</div>
</section>

<section class="section">
	<div class="container">
		{% if user %}
    	<a class="button is-primary" href="{{ path('user_profile_update') }}">{% trans from 'ui' %}user.profile.buttons.update{% endtrans %}</a>
    	<a class="button is-warning" href="{{ path('user_password_update') }}">{% trans from 'ui' %}user.profile.buttons.password{% endtrans %}</a>
    	<a class="button is-danger" href="{{ path('user_profile_delete') }}">{% trans from 'ui' %}user.profile.buttons.delete{% endtrans %}</a>
		<a class="button is-link" href="{{ path('user_proposals') }}">{% trans from 'ui' %}user.profile.buttons.ads{% endtrans %}</a>
    	<table class="table">
			<tr><th>{% trans from 'user' %}email.label{% endtrans %}</th><td>{{ user.email }}</td></tr>
			<tr><th>{% trans from 'user' %}givenName.label{% endtrans %}</th><td>{{ user.givenName }}</td></tr>
          	<tr><th>{% trans from 'user' %}familyName.label{% endtrans %}</th><td>{{ user.familyName }}</td></tr>
			<tr><th>{% trans from 'user' %}gender.label{% endtrans %}</th><td>{{ user.genderString | trans({}, 'user') }}</td></tr>
			<tr><th>{% trans from 'user' %}birthYear.label{% endtrans %}</th><td>{{ user.birthYear ? user.birthYear }}</td></tr>
          	<tr><th>{% trans from 'user' %}telephone.label{% endtrans %}</th><td>{{ user.telephone }}</td></tr>
      	</table>
      	{% else %}
      	<span class="tag is-danger">User not found.</span>
      	{% endif %}
	</div>
</section>

{% endblock %}
