{% extends '@Mobicoop/base.html.twig' %}

{% block title %}Résultats{% endblock %}

{% block body %}

<section class="hero is-primary">
	<div class="hero-body">
    	<div class="container">
      		<h1 class="title">
        		Mobicoop - Résultats
      		</h1>
    	</div>
  	</div>
</section>

<section class="section">
	<div class="container">
	    {% if error is defined %}
		<span class="tag is-danger">{{ error }}</span>
		{% endif %}
		<div class="content">
			<div class="box">
				<h3 class="title">Votre recherche</h3>
				<div class="columns">
					<div class="column">
						<p><strong>Origine : </strong>{{ proposal.waypoints[0].address.addressLocality }}</p>
					</div>
					<div class="column">
						<p><strong>Destination : </strong>{{ proposal.waypoints[1].address.addressLocality }}</p>
					</div>
					<div class="column">
						<p><strong>Date : </strong>{{ proposal.criteria.fromDate|date('d/m/Y') }}</p>
					</div>
				</div>
			</div>
    		<h2 class="title">Résultats</h2>
			<div class="box">
				<h3 class="title">Conducteurs</h3>
				{% if proposal.matchingRequests and proposal.matchingRequests|length>0  %}
					<table class="table">
						<tr>
							<th>#</th>
							<th>Covoitureur</th>
							<th>Date de départ</th>
							<th>Type</th>
							<th>Fréquence</th>
							<th>Origine</th>
							<th>Destination</th>
							<th>Distance</th>
							<th>Détour</th>
							<th>Durée</th>
						</tr>
						{% for matching in proposal.matchingRequests %}
							<tr>
								<td>{{ matching.proposalOffer.id }}</td>
								<td>{{ matching.proposalOffer.user.givenName|capitalize }} {{ matching.proposalOffer.user.familyName|first|upper }}</td>
								<td>{{ matching.proposalOffer.criteria.fromDate|date('d/m/Y') }} à {{ matching.proposalOffer.criteria.fromTime|date('H:i') }}</td>
								<td>{{ matching.proposalOffer.type == 1 ? "Aller simple" : "Aller-retour" }}</td>
								<td>{{ matching.proposalOffer.criteria.frequency == 1 ? "Ponctuel" : "Régulier" }}</td>
								<td>{{ matching.proposalOffer.waypoints[0].address.addressLocality }}</td>
								<td>{{ matching.proposalOffer.waypoints[1].address.addressLocality }}</td>
								<td>{% if matching.filters and matching.filters.newDistance %} {{ (matching.filters.newDistance / 1000) | round(2) }}km {% else %} NC {% endif %}</td>
								<td>{% if matching.filters and matching.filters.detourDistance %} {{ (matching.filters.detourDistance / 1000) | round(2) }}km {% else %} NC {% endif %}</td>
								<td>{% if matching.filters and matching.filters.newDuration %} {{ (matching.filters.newDuration / 60) | round}} minutes {% else %} NC {% endif %}</td>
							</tr>
						{% endfor %}							
					</table>
				{% else %}
					<span class="tag is-warning">Pas de conducteur trouvé.</span>
				{% endif %}
			</div>
			<div class="box">
				<h3 class="title">Passagers</h3>
				{% if proposal.matchingOffers and proposal.matchingOffers|length>0  %}
					<table class="table">
						<tr>
							<th>#</th>
							<th>Covoitureur</th>
							<th>Date de départ souhaitée</th>
							<th>Type</th>
							<th>Fréquence</th>
							<th>Origine</th>
							<th>Destination</th>
							<th>Distance</th>
							<th>Détour</th>
							<th>Durée</th>
						</tr>
						{% for matching in proposal.matchingOffers %}
							<tr>
								<td>{{ matching.proposalRequest.id }}</td>
								<td>{{ matching.proposalRequest.user.givenName|capitalize }} {{ matching.proposalRequest.user.familyName|first|upper }}</td>
								<td>{{ matching.proposalRequest.criteria.fromDate|date('d/m/Y') }} à {{ matching.proposalRequest.criteria.fromTime|date('H:i') }}</td>
								<td>{{ matching.proposalRequest.type == 1 ? "Aller simple" : "Aller-retour" }}</td>
								<td>{{ matching.proposalRequest.criteria.frequency == 1 ? "Ponctuel" : "Régulier" }}</td>
								<td>{{ matching.proposalRequest.waypoints[0].address.addressLocality }}</td>
								<td>{{ matching.proposalRequest.waypoints[1].address.addressLocality }}</td>
								<td>{% if matching.filters and matching.filters.newDistance %} {{ (matching.filters.newDistance / 1000) | round(2) }}km {% else %} NC {% endif %}</td>
								<td>{% if matching.filters and matching.filters.detourDistance %} {{ (matching.filters.detourDistance / 1000) | round(2) }}km {% else %} NC {% endif %}</td>
								<td>{% if matching.filters and matching.filters.newDuration %} {{ (matching.filters.newDuration / 60) | round}} minutes {% else %} NC {% endif %}</td>
							</tr>
						{% endfor %}							
					</table>
				{% else %}
					<span class="tag is-warning">Pas de passager trouvé.</span>
				{% endif %}
			</div>
		</div>
		
	</div>
</section>

{% endblock %}
