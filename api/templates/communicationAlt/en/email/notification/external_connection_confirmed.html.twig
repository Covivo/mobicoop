{% extends 'communicationAlt/fr/email/notification/base.html.twig' %}
{% block body %}
<table style="width:100%;font-family:{{api_env('EMAILS_FONT')}}, sans-serif;">
    <tr>
        <td>
            <table style="width:100%;">
                <tr>
                    <td style="width:70%" align="center">
                        <p>Bonjour<b style="color:{{api_env('EMAILS_COLOR_PRIMARY')}}"> {{context.user.givenName|capitalize}} {{context.user.shortFamilyName|capitalize}}</b></p>
                        <p>Un e-mail a bien été envoyé à un utilisateur de {{context.externalConnection.provider}}</p>
                        <p>Voici son contenu:</p>
                        </td>
                </tr>
                <tr>
                    <td align="center">
                        <table style="width:100%; border-style:solid; border-width:0.5px; border-color:grey; margin-bottom:16px;" cellpadding="6" cellspacing="6" summary="" border="0" >
                            <tr>
                                <td style="width:5px">
                                    <p> </p>
                                </td>
                                <td align="left">
                                    <p style="font-size:11px; text-align:justify">{{context.externalConnection.content | nl2br}}</p>
                                </td>
                                <td style="width:5px">
                                    <p> </p>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    </hr>
</table>
{% endblock %}
