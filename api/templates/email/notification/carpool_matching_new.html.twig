{% extends '/email/notification/base.html.twig' %}
{% block body %}
<table align="center" style="border-spacing:0;text-align:left;vertical-align:top;width:100%;margin-top:20px;font-family:Roboto, sans-serif;">
    <tr>
        <td>
            <p>{{ "hello"|trans }}<b style="color:{{api_env('EMAILS_COLOR_PRIMARY')}}"> {{context.user.givenName|capitalize}} {{context.user.shortFamilyName|capitalize}}</b>.</p>
        </td>
    </tr>
    <tr>
        <td>
            <p>{{ "newCarpoolAdMatchingYourCommute"|trans }} <span style="color:{{api_env('EMAILS_COLOR_SECONDARY')}}"> {{ (context.matching.waypoints|first).address.addressLocality }}</span> {{ "and"|trans }} <span style="color:{{api_env('EMAILS_COLOR_SECONDARY')}}">{{ (context.matching.waypoints|last).address.addressLocality }}</span> {{ "justPublished"|trans }}.</p>
        </td>
    </tr> 
    <tr>
        <td> 
            {% if context.user.mobileRegistration is not null %} 
           <p>{{ "seeYouIn"|trans }} <a href="{{ api_env('EMAILS_MOBILE_PLATFORM_URL') }}{{ "linkMyAds"|trans }} ">"{{ "myAds"|trans }}"</a> {{ "toConsultCorrespondingAdsAndMakeContact"|trans }}.</p>
           {% else %}
           <p>{{ "seeYouIn"|trans }} <a href="{{ api_env('EMAILS_PLATFORM_URL') }}{{ "linkMyAds"|trans }} ">"{{ "myAds"|trans }}"</a> {{ "toConsultCorrespondingAdsAndMakeContact"|trans }}.</p>
           {% endif %}
        </td>
    </tr> 
    <tr>
        <td>
            {% if context.user.mobileRegistration is not null %} 
            <p>{{"signature"|trans}} <a style="color:{{api_env('EMAILS_COLOR_PRIMARY')}}" href="{{api_env('EMAILS_MOBILE_PLATFORM_URL')}}">{{api_env('EMAILS_PLATFORM_NAME')}}</a></p>
            {% else %}
            <p>{{"signature"|trans}} <a style="color:{{api_env('EMAILS_COLOR_PRIMARY')}}" href="{{api_env('EMAILS_PLATFORM_URL')}}">{{api_env('EMAILS_PLATFORM_NAME')}}</a></p>
            {% endif %}
        </td>
    </tr>
    </table>    
{% endblock %}