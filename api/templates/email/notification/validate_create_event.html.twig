{% extends '/email/notification/base.html.twig' %}
{% block body %}
<table style="width:100%;font-family:{{api_env('EMAILS_FONT')}}, sans-serif;">
    <tr>
        <td>
            <table>
                <tr>
                    <td>
                        <p style="color:{{api_env('EMAILS_COLOR_SECONDARY')}};font-size:30" ><b>{{ "event"|trans }}</b></p>
                        <hr>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td>
            <table style="width:100%;">
                <tr>
                    <td style="width:70%">
                        <p>{{ "hello"|trans }}<b style="color:{{api_env('EMAILS_COLOR_PRIMARY')}}"> {{context.user.givenName|capitalize}} {{context.user.shortFamilyName|capitalize}}</b></p>
                        <p>{{"eventCreated"|trans}}</p>
                    </td>

                </tr>
                <tr>
                    <td>
                        <p>{{ "eventDetail"|trans }}</p>
                        <ul>
                            <li>{{ "eventName"|trans }}<b style="color:{{api_env('EMAILS_COLOR_PRIMARY')}}">{{ context.event.name }} </b></li>
                            <li>{{ "eventLocation"|trans }}{{ context.event.address.displayLabel[0] }} </li>
                            <li>{{ "eventDescription"|trans }}{{ context.event.description }} </li>
                        </ul>
                    </td>
                </tr>    
            </table>
        </td>
    </tr>
     <tr>
        <td>
            <table  style="width:100%;">
                <tr style="text-align:left">
                    <td>
                        <p>{{"signature"|trans}} <a style="color:{{api_env('EMAILS_COLOR_PRIMARY')}}" href="{{api_env('EMAILS_PLATFORM_URL')}}">{{api_env('EMAILS_PLATFORM_NAME')}}</a>
                    </td>
                </tr>
                <hr>
            </table>
        </td>
    </tr>
</table>
{% endblock %}    
