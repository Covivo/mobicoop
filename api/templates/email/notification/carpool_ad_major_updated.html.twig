{% extends '/email/notification/base.html.twig' %}
{% block body %}
    {% set new = context.object.new %}
    {% set old = context.object.old %}
    {% set ask = context.object.ask %}
    {% set sender = context.object.sender %}
    {% set recipient = context.user %}
    {% set outwardOrigin = context.origin %}
    {% set outwardDestination = context.destination %}

    <table style="width:100%;font-family:{{ api_env('EMAILS_FONT') }}, sans-serif;">
        <tr>
            <td>
                <table>
                    <tr>
                        <td>
                            <p style="color:{{ api_env('EMAILS_COLOR_SECONDARY') }};font-size:30px">
                                <b>{{ "cancelledCarpool"|trans }}</b></p>
                            <hr>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <table style="width:100%;">
                    <tr>
                        <td style="width:70%">
                            <p>{{ "hello"|trans }}<b
                                        style="color:{{ api_env('EMAILS_COLOR_PRIMARY') }}"> {{ recipient.givenName|capitalize }} {{ recipient.shortFamilyName|capitalize }}</b>
                            </p>
                            <p>{{ "yourCarpoolWith"|trans }}<b
                                        style="color:{{ api_env('EMAILS_COLOR_PRIMARY') }}"> {{ sender.givenName|capitalize }} {{ sender.shortFamilyName|capitalize }}</b> {{ "hasBeenCancelledBecause"|trans }}
                                <b>{{ sender.givenName|capitalize }} {{ sender.shortFamilyName|capitalize }}</b> {{ "hasUpdatedHisAd"|trans }}
                            </p>
                            {% if context.object.searchLink %}

                                {% set origin = null %}
                                {% set destination = null %}
                                {% set regular = false %}
                                {% set date = null %}

                                {% if ask.criteria.frequency == 2 %}
                                    {% set regular = true %}
                                {% else %}
                                    {% set date = ask.criteria.outwardDate %}
                                {% endif %}

                                {% for waypoint in ask.waypoints %}
                                    {% if waypoint.position == 0 %}
                                        {% set origin = waypoint.address.id %}
                                    {% elseif waypoint.destination == true %}
                                        {% set destination = waypoint.address.id %}
                                    {% endif %}
                                {% endfor %}

                                <a href="{{ context.object.searchLink ~ "?" ~ {'origin': origin, 'destination': destination, 'regular': regular, 'date': date|date("Y-m-d")}| url_encode }}">
                                    {{ "clickNewSearch"|trans }} {{ outwardOrigin.address.displayLabel[0] }} => {{ outwardDestination.address.displayLabel[0] }}
                                </a>

                            {% endif %}
                        </td>
                        <td style="width:30%">
                            <img style="border-radius:50px" src="{{ sender.avatars[0] }}" alt="Avatar"/>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <table style="width:70%;background-color:{{ api_env('EMAILS_COLOR_PRIMARY_LIGHT') }};margin-top:5px;margin-bottom:5px;margin-left:5px">
                    <tr>
                        <td style="width:10%;text-align:left">
                            <img src="{{ api_env('EMAILS_PLATFORM_URL') }}{{ api_env('EMAILS_IMAGES_BASE_URL') }}{{ api_env('EMAILS_WAY_LOGO') }}"
                                 alt="trajet"/>
                        </td>
                        <td style="width:90%;text-align:left">
                            <p>
                                <b style="color:{{ api_env('EMAILS_COLOR_PRIMARY') }}">{{ outwardOrigin.address.displayLabel[0] }}</b>
                            </p>
                            <p>
                                <b style="color:{{ api_env('EMAILS_COLOR_PRIMARY') }}"> {{ outwardDestination.address.displayLabel[0] }}</b>
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        {% if new.cancellationMessage %}
            <tr>
                <td>
                    <table style="width:100%;">
                        <tr>
                            <td style="width:70%">
                                <p>{{ "ownerMessage"|trans|raw}}</p>
                                <p>{{ new.cancellationMessage }}
                                </p>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <p></p>
                </td>
            </tr>
        {% endif %}
        <tr>
            <td>
                <p>{{ "noPenaltyApplied"|trans|raw }}</p>
            </td>
        </tr>

        </hr>
    </table>
{% endblock %}    