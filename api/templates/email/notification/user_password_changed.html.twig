{% extends '/email/notification/base.html.twig' %}
{% block body %}
    {% if Ask password %}
    <p>{{ "askNewPassword"|trans }}.</p>
    <p>{{ "clickHereToChangePassword"|trans }} <a href="{{ api_env('EMAILS_PLATFORM_URL') }}{{  "urlUpdatePassword"|trans }}{{ context.user.validatedDateToken }}" title="">{{ "linkChangePassword"|trans }}.</a></p>
    {% elseif password changed %}
    <p>{{ "yourPassword"|trans }} {{api_env('EMAILS_PLATFORM_NAME')}} {{ "successfullyChanged"|trans }}.</p>
    {% endif %}
    <p>{{ "thankYou"|trans }} {{api_env('EMAILS_PLATFORM_NAME')}} !</p>
{% endblock %}